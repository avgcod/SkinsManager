<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SkinManager.Controls.SlideshowControl"
             Name="SlideshowControl1">
    <Grid ColumnDefinitions="Auto, *, Auto" RowDefinitions="*,Auto">
        <Button Grid.Row="0" Grid.Column="0" IsVisible="{Binding #SlideshowControl1.HasMultipleImages}" FontSize="20" Command="{Binding #SlideshowControl1.ChangeImageCommand}" CommandParameter="false">&lt;-</Button>
        <Image Grid.Row="0"
                  Grid.Column="1"
                  Margin="2,0"
                  Source="{Binding #SlideshowControl1.CurrentImage}" />
        <Button Grid.Row="0" Grid.Column="2" IsVisible="{Binding #SlideshowControl1.HasMultipleImages}" FontSize="20" Command="{Binding #SlideshowControl1.ChangeImageCommand}" CommandParameter="true">-&gt;</Button>
        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" Text="{Binding #SlideshowControl1.ImageProgress}"/>
    </Grid>
</UserControl>
